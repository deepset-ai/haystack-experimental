                "description": "Raw HTML content of the page if `includeHtml` is true"
              },
              "metadata": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "language": {
                    "type": "string",
                    "nullable": true
                  },
                  "keywords": {
                    "type": "string",
                    "nullable": true
                  },
                  "robots": {
                    "type": "string",
                    "nullable": true
                  },
                  "ogTitle": {
                    "type": "string",
                    "nullable": true
                  },
                  "ogDescription": {
                    "type": "string",
                    "nullable": true
                  },
                  "ogUrl": {
                    "type": "string",
                    "format": "uri",
                    "nullable": true
                  },
                  "ogImage": {
                    "type": "string",
                    "nullable": true
                  },
                  "ogAudio": {
                    "type": "string",
